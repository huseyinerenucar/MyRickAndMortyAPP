<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.RickandMorty" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:background">@color/white</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="android:colorBackground">@color/white</item>
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/purple_500</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/teal_200</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/purple_500</item>
        <item name="android:windowIsTranslucent">true</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.RickandMorty.AppBarOverlay" parent="Theme.MaterialComponents.Light.DarkActionBar" />

    <style name="Theme.RickandMorty.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="FakeSplashTheme" parent="Theme.RickandMorty">
        <item name="android:windowSplashScreenAnimatedIcon" tools:targetApi="s">@android:color/transparent</item>
        <item name="android:windowSplashScreenAnimationDuration" tools:targetApi="s">0</item>
    </style>

    <style name="SplashTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/dw_splash_background</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:statusBarColor">@color/lblack</item>
    </style>
    <style name="SplashThemeFirst" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/dw_splash_background_first</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:statusBarColor">@color/lblack</item>
    </style>

    <style name="ChipTheme" parent="Theme.MaterialComponents">
        <item name="android:background">@color/white</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="android:colorBackground">@color/white</item>
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/purple_500</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/teal_200</item>
        <!-- Status bar color. -->
        <!-- Customize your theme here. -->
    </style>

    <style name="AppTheme.GenderChip" parent="TextAppearance.MaterialComponents.Chip">
        <item name="fontFamily">@font/avenir</item>
    </style>
</resources>